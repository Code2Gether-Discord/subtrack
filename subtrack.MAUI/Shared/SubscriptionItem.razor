<div class="card border-primary mb-3" style="max-width: 20rem;">
    <div class="card-body">
        <div class="d-flex justify-content-between fs-5">
            <div>@Subscription.Name</div>
            <div class="text-right">@($"{Subscription.Cost:C}")</div>
        </div>
    </div>
    <div class="card-body">
        <div class="d-flex justify-content-between fs-6">
            <div>@(Subscription.LastPayment.Day + GetDateSuffix(Subscription.LastPayment.Day))</div>
            <div class="text-right">@(Subscription.IsAutoPaid ? "Auto" : string.Empty)</div>
        </div>
    </div>
</div>



@code {
    [Parameter]
    [EditorRequired]
    public Subscription Subscription { get; set; }

    public string GetDateSuffix(int day)
    {
        string suffix;

        if (day % 10 == 1 && day != 11)
        {
            suffix = "st";
        }
        else if (day % 10 == 2 && day != 12)
        {
            suffix = "nd";
        }
        else if (day % 10 == 3 && day != 13)
        {
            suffix = "rd";
        }
        else
        {
            suffix = "th";
        }

        return suffix;
    }
}
