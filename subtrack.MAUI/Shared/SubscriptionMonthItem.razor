<div class="container mt-3">

    <div class="d-flex bg-primary rounded mb-1 fw-bold justify-content-between">
        <div class="p-1 ps-2">@MonthName</div>
        <div class="p-1 pe-2">@($"{SubscriptionsCost:C}")</div>
    </div>

    @foreach (var sub in Subscriptions)
    {
        <div class="card mb-2" style="max-width: 20rem;">
            <div class="card-body" style="padding-top: 5px; padding-bottom: 5px;">
                <div class="d-flex justify-content-between fs-5">
                    <div>@sub.Name</div>
                    <div class="text-right">@($"{sub.Cost:C}")</div>
                </div>
                <div class="d-flex justify-content-between fs-6">
                    <div>@($"{sub.LastPayment.Day}{GetDateSuffix(sub.LastPayment.Day)}")</div>
                    <div class="text-right">
                        @if (sub.IsAutoPaid)
                        {
                            <i class="fa fa-repeat" aria-hidden="true"></i>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    [EditorRequired]
    public IEnumerable<Subscription> Subscriptions { get; set; }

    [Parameter]
    [EditorRequired]
    public decimal SubscriptionsCost { get; set; }

    [Parameter]
    [EditorRequired]
    public string MonthName { get; set; }

    public string GetDateSuffix(int day)
    {
        return day switch
        {
            1 or 21 or 31 => "st",
            2 or 22 => "nd",
            3 or 23 => "rd",
            _ => "th"
        };
    }
}
